-- To launch the compilation with this file, just type:
-- 
--               compile example3.ace
--
-- In his example, only one class (the root class) is traced by the 
-- SmallEiffel debugger.
--
system
   number2 -- Because this is also the example2 of tutorial/number

root

   EXAMPLE2 : "make"

default

   verbose (no);
       --   yes is the equivalent of the -verbose flag.

   assertion (no);

   trace(no);

   debug (no);

cluster

   "${SmallEiffelDirectory}tutorial/number"
      default
         trace(yes)
      end


   "${SmallEiffelDirectory}lib/kernel"
   
   "${SmallEiffelDirectory}lib/base"

   "${SmallEiffelDirectory}lib/io"

   "${SmallEiffelDirectory}lib/number"
   

external

generate

end
